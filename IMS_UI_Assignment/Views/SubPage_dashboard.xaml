<Page x:Class="IMS_UI_Assignment.Views.SubPage_dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS_UI_Assignment.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Loaded="Page_Loaded"
      Title="SubPage_dashboard">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel>
                <TextBlock Text="Welcome to the Prime Avatar !"
                           FontWeight="Black"
                           Foreground="#2976f2"
                          TextAlignment="Center"
                          FontSize="70"
                          HorizontalAlignment="Center"
                          Margin="0, 20, 0, 0"/>
                <TextBlock Text="Inventory Management System"
                          Foreground="White"
                          TextAlignment="Center"
                          FontSize="40"
                          HorizontalAlignment="Center"
                          Margin="0, 20, 0, 0"/>
            </StackPanel>
        </Grid>

        <Grid Margin="20" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#495ea3"
                    CornerRadius="20"
                    Height="50">
                <Grid Margin="5">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock  Text="{Binding ProductCount, UpdateSourceTrigger=PropertyChanged}"
                                    FontSize="20"    
                                    Height="auto"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                        <TextBlock  Text="Total Products"
                                    FontSize="20"
                                    Margin="50 0 0 0"
                                    Height="auto"
                                    Foreground="White"/>

                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Column="2"
                    Background="#2a3c75"
                    CornerRadius="20"
                      Height="50">
                <Grid Margin="5">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock  Text="{Binding SupplierCount, UpdateSourceTrigger=PropertyChanged}"
                                    FontSize="20"    
                                    Height="auto"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                        <TextBlock  Text="Total Suppliers"
                                    FontSize="20"
                                    Margin="50 0 0 0"
                                    Height="auto"
                                    Foreground="White"/>

                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Row="2"
                    Background="#2a3c75"
                    CornerRadius="20"
                      Height="50">
                <Grid Margin="5">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock  Text="{Binding SystemUsers, UpdateSourceTrigger=PropertyChanged}"
                                    FontSize="20"    
                                    Height="auto"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                        <TextBlock  Text="System Users"
                                    FontSize="20"
                                    Margin="50 0 0 0"
                                    Height="auto"
                                    Foreground="White"/>

                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Column="2" Grid.Row="2"
                    Background="#14224f"
                    CornerRadius="20"
                    Height="50">
                <Grid Margin="5">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <TextBlock  Text="{Binding LowStock, UpdateSourceTrigger=PropertyChanged}"
                                    FontSize="20"    
                                    Height="auto"
                                    Foreground="White"
                                    FontWeight="Bold"/>
                        <TextBlock  Text="Low Stocks"
                                    FontSize="20"
                                    Margin="50 0 0 0"
                                    Height="auto"
                                    Foreground="White"/>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
