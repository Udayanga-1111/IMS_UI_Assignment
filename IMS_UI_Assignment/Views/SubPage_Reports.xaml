<Page x:Class="IMS_UI_Assignment.Views.SubPage_Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControl="clr-namespace:IMS_UI_Assignment.Views.UserControls"
      xmlns:local="clr-namespace:IMS_UI_Assignment.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="SubPage_Reports">

    <Grid Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Reports" 
                       FontSize="40"
                       Foreground="White"
                       Margin="20,5,0,0"/>

            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    x:Name="SearchbarStack"
                    Height="40"
                    Width="auto"
                    Grid.Row="1">
                <userControl:InputField x:Name="productSearchBar" Placeholder="Select A Report"/>
                <Border Background="#203d59"
                    CornerRadius="15"
                    Width="100"
                    Margin="10,0,0,0">
                    <Button x:Name="userSearchBtn" Content="Genarate" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
                </Border>

            </StackPanel>


            <!-- Add the Data Grid or List Here for display supplier -->
            <Grid>
                <!-- Suppliers Display Area -->
            </Grid>
        </Grid>
    </Grid>
</Page>
